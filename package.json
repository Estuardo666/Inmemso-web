{
  "name": "Inmemso-web",
  "private": true,
  "version": "0.0.0",
  "engines": {
    "node": "20.x",
    "npm": ">=9.0.0"
  },
  "type": "module",
  "description": "Inmemso Architecture - Modern React application with TypeScript and Framer Motion",
  "author": "Inmemso Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Estuardo666/Inmemso-web.git"
  },
  "scripts": {
    "dev": "next dev --turbo",
    "build": "prisma generate && node scripts/migrate-or-skip.mjs && next build && echo 'Build completed successfully'",
    "start": "next start",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "clean-cache": "powershell -Command \"if (Test-Path .next) { Remove-Item -Recurse -Force .next }; Write-Host 'Cache cleared. Run npm run dev to restart' -ForegroundColor Green\"",
    "test:payload": "node test-payload-global.js",
    "db:seed": "node prisma/seed-simple.cjs",
    "db:reset-preferences": "tsx src/scripts/reset-preferences.ts",
    "db:reset-tables": "tsx src/scripts/reset-tables.ts",
    "db:reset-all": "npm run db:reset-preferences && npm run db:reset-tables",
    "db:reset-full": "tsx src/scripts/full-reset-db.ts"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@payloadcms/db-postgres": "3.69.0",
    "@payloadcms/next": "3.69.0",
    "@payloadcms/plugin-cloud-storage": "^3.69.0",
    "@payloadcms/richtext-lexical": "3.69.0",
    "@payloadcms/ui": "3.69.0",
    "@prisma/client": "^6.0.0",
    "@tailwindcss/postcss": "^4.1.18",
    "axios": "^1.13.2",
    "cloudinary": "^2.8.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "framer-motion": "^12.23.26",
    "lucide-react": "^0.559.0",
    "next": "^15.2.0",
    "payload": "3.69.0",
    "pg": "^8.16.3",
    "postcss": "^8.5.6",
    "prisma": "^6.0.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/react": "^19.2.1",
    "@types/react-dom": "^19.2.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.1",
    "eslint-plugin-react-refresh": "^0.4.9",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.2",
    "vite": "^7.3.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
