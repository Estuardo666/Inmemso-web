generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  relationMode = "prisma"
}

model User {
  id        String   @id
  name      String
  role      String   @default("viewer")
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@map("users")
}

model Project {
  id              String   @id
  title           String
  slug            String   @unique
  description     String
  content         String
  featuredImageId String?
  year            String?
  status          String   @default("draft")
  createdAt       DateTime @default(now())
  updatedAt       DateTime
  featuredImage   Media?   @relation(fields: [featuredImageId], references: [id], onDelete: SetNull)

  @@map("projects")
}

model Service {
  id              String   @id
  title           String
  slug            String   @unique
  description     String
  content         String?
  icon            String?
  featuredImageId String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime
  featuredImage   Media?   @relation(fields: [featuredImageId], references: [id], onDelete: SetNull)

  @@map("services")
}

model Media {
  id        String    @id
  alt       String
  url       String?
  createdAt DateTime  @default(now())
  updatedAt DateTime
  projects  Project[]
  services  Service[]

  @@map("media")
}

model Testimonial {
  id        String   @id
  name      String
  position  String
  company   String
  quote     String
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@map("testimonials")
}

model project_services {
  id        String @id
  projectId String
  service   String

  @@unique([projectId, service])
}

model project_technologies {
  id         String @id
  projectId  String
  technology String

  @@unique([projectId, technology])
}
