generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  relationMode = "prisma"
}

model User {
  id                      String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name                    String?
  email                   String    @unique
  role                    String    @default("user")
  
  // MAPEOS DE FECHAS (Crucial para Payload)
  createdAt               DateTime  @default(now()) @map("created_at")
  updatedAt               DateTime  @updatedAt @map("updated_at")
  
  // Campos de Auth de Payload
  resetPasswordToken      String?   @map("reset_password_token")
  resetPasswordExpiration DateTime? @map("reset_password_expiration")
  salt                    String?
  hash                    String?
  loginAttempts           Int?      @default(0) @map("login_attempts")
  lockUntil               DateTime? @map("lock_until")

  // Relaciones
  sessions                Session[]
  preferences             PayloadPreference[] @relation("UserPreferences")
  
  @@map("users")
}

model Project {
  id              String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title           String
  slug            String   @unique
  description     String
  content         String
  featuredImageId String?
  year            String?
  status          String   @default("draft")
  createdAt       DateTime @default(now())
  updatedAt       DateTime
  featuredImage   Media?   @relation(fields: [featuredImageId], references: [id], onDelete: SetNull)
  
  // Relaciones inversas para arrays de Payload
  servicesList     ProjectService[]
  technologiesList ProjectTechnology[]

  @@map("projects")
}

model Service {
  id              String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title           String
  slug            String   @unique
  description     String
  content         String?
  icon            String?
  featuredImageId String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime
  featuredImage   Media?   @relation(fields: [featuredImageId], references: [id], onDelete: SetNull)

  @@map("services")
}

model Media {
  id        String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  alt       String
  url       String?
  createdAt DateTime  @default(now())
  updatedAt DateTime
  projects  Project[]
  services  Service[]

  @@map("media")
}

model Testimonial {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name      String
  position  String
  company   String
  quote     String
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime

  @@map("testimonials")
}

model ProjectService {
  id        String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  
  // Relación con el padre (Project)
  project   Project @relation(fields: [parentId], references: [id], onDelete: Cascade)
  parentId  String  @map("_parent_id")
  
  // El campo de texto dentro del array
  service   String?
  
  // Ordenamiento de Payload
  order     Int?    @map("_order")

  @@map("projects_services")
}

model ProjectTechnology {
  id         String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  
  // Relación con el padre (Project)
  project    Project @relation(fields: [parentId], references: [id], onDelete: Cascade)
  parentId   String  @map("_parent_id")
  
  // El campo de texto dentro del array
  technology String?
  
  // Ordenamiento de Payload
  order      Int?    @map("_order")

  @@map("projects_technologies")
}

model Session {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  
  user      User     @relation(fields: [parentId], references: [id], onDelete: Cascade)
  parentId  String   @map("_parent_id")
  
  token     String
  
  // MAPEOS DE FECHAS Y CAMPOS (Crucial)
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  
  order     Int?     @map("_order")

  @@map("users_sessions")
}

model PayloadPreference {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  key       String?
  value     String?
  userId    String?
  user      User?    @relation("UserPreferences", fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("payload_preferences")
}

model PayloadMigration {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name      String
  batch     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("payload_migrations")
}
